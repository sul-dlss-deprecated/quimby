<nav class="navbar fixed-top fixed-top-2" style="background-color: #e0e0e0;">
  <%= form_tag servers_path, method: :get, enforce_utf8: false , class: 'form-inline justify-content-center' do %>
    <label class="mr-sm-2">Pupgraded</label>
    <%= select_tag 'pupgraded', options_for_select([true, false], selected: params[:pupgraded]), include_blank: true, class: 'custom-select mr-sm-2' %>

